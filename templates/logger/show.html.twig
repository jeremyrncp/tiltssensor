{% extends 'base.html.twig' %}

{% block title %}Logger{% endblock %}

{% block body %}
    <h1>Logger</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ logger.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ logger.name }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ logger.content }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ logger.createdAt ? logger.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_logger_index') }}">back to list</a>

    {{ include('logger/_delete_form.html.twig') }}
{% endblock %}
