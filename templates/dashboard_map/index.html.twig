{% extends 'base.html.twig' %}

{% block title %}Hello DashboardMapController!{% endblock %}

{% block body %}
    <div id="map" style="width: 100%; height: 800px;"></div>

    <script type="text/javascript">
    map = L.map('map').setView([{{ firstLift.latitude }}, {{ firstLift.longitude }}], 12);
    L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
      maxZoom: 19,
      attribution: '&copy; <a href="http://www.openstreetmap.org/copyright">OpenStreetMap</a>'
    }).addTo(map);

    {% for index, lift in lifts %}
        var marker{{ index }} = L.marker([{{ lift.latitude }}, {{ lift.longitude }}]).addTo(map);
        marker{{ index }}.bindPopup('<b>{{ lift.inventory }}</b><br /><a href="{{ path('app_dashboard_unitary_lift', {'id': lift.id}) }}"git s>show dashbpard</a>')
    {% endfor %}

    </script>
{% endblock %}
